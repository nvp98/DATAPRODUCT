
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@model List<PhieuGiaoNhanViewModel>
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />
@if (TempData["msgSuccess"] != null)
{
	@Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
	@Html.Raw(TempData["msgError"])
}
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";

	Pager pager = new Pager();
	int pageNo = 0;
	if (ViewBag.Pager != null)
	{
		pager = ViewBag.Pager;
		pageNo = pager.CurrentPage;
	}

}
<style>
	.filter-row select, .filter-row input {
		max-width: 200px;
	}

	table thead tr th.text-center[rowspan="3"] {
		vertical-align: middle !important;
		background-color: #f7f7f7 !important;
		width: 150px !important;
	}

	table tbody tr td.text-center {
		vertical-align: middle !important;
	}

	.table-responsive {
		max-height: 600px;
	}

	.text-nowrap {
		white-space: nowrap;
	}
</style>
<div class="app-main__outer">
	<div class="app-main__inner" style="display:block; padding-bottom: 0px;">
		<div class="tab-content">
			<div class="row">
				<div class="card">
					<div class="row" style="width:100%; height: 120px;z-index: 1;">
						<div style="display: flex; border-bottom: 0.8px solid #E8E8E8; position: fixed; background-color:#F9F9F9; width: -webkit-fill-available;">
							<div class="col-8" style="text-align: left; padding: 2% 2% 2% 0%;">
								<span class="text-muted small pt-2 ps-1">
									<b style="color:#06428b; font-size: 15px;">
										DANH SÁCH PHIẾU GIAO NHẬN GANG LỎNG - GANG THỎI
									</b>
								</span>
							</div>
							<div class="col-4" style="text-align: right; padding: 2% 2% 2% 0%;">
								<button type="button" class="btn btn-success" onclick="window.location.href='@Url.Action("TaoPhieu","BM16_GangThoi")'">
							 + Thêm mới
								</button>
							</div>
						</div>
					</div>
					<div class="card-header" style="border-bottom: 0px; padding-bottom:2%">
						<form id="frmSearch" class="row g-2 align-items-center filter-row py-3 px-2 bg-light rounded shadow-sm" style="color: black;">
							<div class="col d-flex align-items-center">
								<label for="txtSearch" class="col-form-label fw-semibold me-2 mb-0">Mã phiếu:</label>
								<input type="text" id="txtSearch" class="form-control form-control-sm" placeholder="Nhập mã phiếu" />
							</div>

							<div class="col d-flex align-items-center">
								<label for="dateFilter" class="col-form-label fw-semibold me-2 mb-0">Ngày:</label>
								<input type="date" id="dateFilter" class="form-control form-control-sm" />
							</div>

							<div class="col d-flex align-items-center">
								<label for="shiftFilter" class="col-form-label fw-semibold me-2 mb-0">Ca:</label>
								<select id="shiftFilter" class="form-select form-select-sm">
									<option value=""></option>
									<option value="1">Ca Ngày</option>
									<option value="2">Ca Đêm</option>
									@* <option value="3">Ca ngày</option> *@
								</select>
							</div>

							<div class="col d-flex align-items-center">
								<label for="crewFilter" class="col-form-label fw-semibold me-2 mb-0">Kíp:</label>
								<select id="crewFilter" class="form-select form-select-sm">
									<option value=""></option>
									<option value="A">A</option>
									<option value="B">B</option>
									<option value="C">C</option>
								</select>
							</div>

							<div class="col d-flex justify-content-center">
								<button type="submit" class="btn btn-primary btn-sm px-4">Tìm kiếm</button>
							</div>
						</form>
					</div>
					<div class="table-responsive px-3 pb-3">
						<table class="table table-bordered table-hover text-nowrap align-middle">
							<thead class="thead-light">
								<tr class="text-center align-middle">
									<th rowspan="3">Mã Phiếu</th>
									<th rowspan="3">Ngày</th>
									<th rowspan="3">Ca</th>
									<th rowspan="3">Lò Cao</th>
									<th rowspan="3">Bộ Phận Tạo</th>
									<th rowspan="3">Người Tạo</th>
									<th rowspan="3">Thời Gian Tạo</th>
									<th rowspan="3">Thao Tác</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td class="text-center"><a href="@Url.Action("Edit_Demo","BM16_GangThoi", new { id = item.MaPhieu })" class="text-primary">@item.MaPhieu</a></td>
										<td class="text-center">@item.Ngay</td>
										<td class="text-center">@item.Ca</td>
										<td class="text-center">@item.LoCao</td>
										<td class="text-center">@item.BoPhanTao</td>
										<td class="text-center">@item.NguoiTao</td>
										<td class="text-center">@item.ThoiGianTao</td>
										<td class="text-center">
											<a href="@Url.Action("Edit_Demo","BM16_GangThoi", new { id = item.MaPhieu })" class="btn btn-sm btn-info me-1">Xem</a>
											<a href="@Url.Action("Edit_Demo","BM16_GangThoi", new { id = item.MaPhieu })" class="btn btn-sm btn-warning">Sửa</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
