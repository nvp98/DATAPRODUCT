@model Data_Product.Models.Tbl_Kip
<script src="~/Chonse/chosen.jquery.js"></script>
<link href="~/Chonse/chosen.css" rel="stylesheet">
@using (Html.BeginForm("Edit", "Kip", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID_Kip)
    <div class="modal-dialog" style="padding-top:1.5%;">
        <div class="modal-content" style="max-width: none; width: 800px;">
            <div class="modal-header" style="background-color: #F9F9F9;">
                <h5 id="ModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-md-12" style="padding-bottom:1.5%;">
                    <label for="inputEmail5" class="form-label">Ngày làm việc</label>
                    @Html.TextBox("NgayLamViec", null, new { @id = "NgayLamViec", @type = "date", @class = "form-control", @Value = ViewBag.NgayLamViec})
                    @Html.ValidationMessageFor(model => model.NgayLamViec, "", new { @class = "text-danger" })
                </div>
  
                <div class="col-md-12" style="padding-bottom:1.5%;">
                    <label for="inputEmail5" class="form-label">Tên ca làm việc</label>
                    @Html.EditorFor(model => model.TenCa, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "" } })
                    @Html.ValidationMessageFor(model => model.TenCa, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-12" style="padding-bottom:1.5%;">
                    <label for="inputEmail5" class="form-label">Tên kíp làm việc</label>
                    @Html.EditorFor(model => model.TenKip, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "" } })
                    @Html.ValidationMessageFor(model => model.TenKip, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="text-align: end;padding: 0% 3% 3% 3%;">
                    <input type="submit" style="border-radius: 10px;" value="Xác nhận" id="btnSubmit" class="btn btn-primary pull-right" />
                </div>
            </div>

        </div>
    </div>
}