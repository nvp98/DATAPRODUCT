    <script>
        // open modal chon me thoi
        function loadModalFilterMeThoi() {
            const id_LoThoi = $('#IDLoThoi').val();

            if(!id_LoThoi){
                alert("Vui lòng chọn Lò thổi");
                $('#modalFilerMethoi').empty();
                return;
            }

            $.ajax({
                url: '/MeThoi/FilterMeThoi', 
                type: 'POST',
                contentType: 'application/json',
                processData: false,
                data: JSON.stringify(id_LoThoi),
                success: function (html) {
                var modalMeThoi = new bootstrap.Modal(document.getElementById('modalFilterMeThoi'));
                    modalMeThoi.show();
                    $('#modalFilerMethoi').html(html);
                },
                error: function () {
                    $('#modalFilerMethoi').html('<div class="text-danger">Không thể tải nội dung.</div>');
                }
            });
        }

        // open modal tao me
        function loadModalTaoMe() {
            $.ajax({
                url: '/MeThoi/TaoMeThoi', 
                type: 'GET',
                success: function (html) {
                    $('#modalTaoMe').html(html);
                },
                error: function () {
                    $('#modalTaoMe').html('<div class="text-danger">Không thể tải nội dung.</div>');
                }
            });
        }

        // tao me
        function submitTaoMe() {
            const maLoThoi = $('#formLoThoi').val();
            const soLuong = $('#formSoLuong').val();

            const selectedOption = $('#formLoThoi option:selected');
            const idLoThoi = selectedOption.data('id');

            if(!soLuong){
                alert("Vui lòng nhập số lượng mẻ thổi muốn tạo"); return;
            }
            if(!maLoThoi){
                alert("Vui lòng chọn Lò thổi"); return;
            }

            $.ajax({
                url: '/MeThoi/TaoMeThoi',
                method: 'POST',
                contentType: 'application/json',
                processData: false,
                data: JSON.stringify({
                    maLoThoi: maLoThoi,
                    soLuong: parseInt(soLuong),
                    id_LoThoi: idLoThoi
                }),
                success: function (res) {
                    // showAlert('Tạo mẻ thổi thành công!', 'success');
                    $('#btnDongModalTaoMeThoi').click();
                     alert("Tạo mẻ thổi thành công!")
                },
                error: function (err) {
                    // showAlert('Tạo mẻ thổi thất bại: ' + xhr.responseText, 'danger');
                    alert("Tạo mẻ thổi thất bại")
                }
            });
        }
    </script>



