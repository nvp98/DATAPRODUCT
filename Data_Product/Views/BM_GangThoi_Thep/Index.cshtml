        function getTableData() {
            const thungTrungGianMap = {};

            const NgayNhan = $('#IDNgayNhan').val();
            const IDCaNhan = $('#IDCaNhan').val();
            const IDLoThoi = $('#IDLoThoi').val();

            if (!NgayNhan) { alert("Vui lòng chọn Ngày Nhận"); return; }
            if (!IDCaNhan) { alert("Vui lòng chọn Ca"); return; }
            if (!IDLoThoi) { alert("Vui lòng chọn Lò thổi"); return; }

            const $rows = $('#IDtbXuLySoLieu tbody tr');

            for (let i = 0; i < $rows.length; i++) {
                const $row = $($rows[i]);

                // Chỉ xử lý dòng đầu tiên của một nhóm (có data-mathungtg)
                const maThungTG = $row.attr('data-mathungtg');
                if (!maThungTG) continue;

                const maThungTG_Copy = $row.attr('data-mathungcopy') || null;
                const isCopy = String($row.attr('data-copy')).toLowerCase() === 'true';
                const key = isCopy ? `COPY_${maThungTG_Copy}` : `ORIGIN_${maThungTG}`;

                const parent = {
                    MaThungTG: maThungTG,
                    MaThungTG_Copy: maThungTG_Copy,
                    IsCopy: isCopy,
                    NgayNhan,
                    CaNhan: IDCaNhan,
                    ID_LoThoi: IDLoThoi,
                    SoThungTG: '',
                    GhiChu: '',
                    KLThung_Thoi: null,
                    KLThungVaGang_Thoi: null,
                    KLGang_Thoi: null,
                    KLPhe: null,
                    Tong_KLGangNhan: 0,
                    ID_MeThoi: null,
                    DanhSachThungGang: []
                };

                // Lấy dữ liệu ở dòng đầu
                parent.SoThungTG = $row.find('td[rowspan]').eq(2).text().trim();
                parent.GhiChu = $row.find('textarea.IDGhiChu').val()?.trim() ?? '';
                parent.KLThung_Thoi = getNumberValue($row.find('input[name="klThung_Thoi"]').val());
                parent.KLThungVaGang_Thoi = getNumberValue($row.find('input[name="klThungVaGang_Thoi"]').val());
                parent.KLGang_Thoi = parseFloat($row.find('.KLVaoLoThoi').text()) || 0;
                parent.KLPhe = getNumberValue($row.find('input[name="kl_phe"]').val()) ;
                parent.Tong_KLGangNhan = parseFloat($row.find('.tong_KL_GangNhan').text()) || 0;
                const idMeThoiVal = $row.find('.selectMeThoi').val();
                parent.ID_MeThoi = idMeThoiVal ? parseInt(idMeThoiVal) : null;

                // Duyệt tiếp các dòng trong nhóm thùng trung gian
                i++; // sang dòng thứ 2 của nhóm
                while (i < $rows.length) {
                    const $nextRow = $($rows[i]);
                    const nextMaThungTG = $nextRow.attr('data-mathungtg');
                    if (nextMaThungTG) {
                        // nếu gặp thùng mới thì quay lại for để xử lý nhóm tiếp theo
                        i--;
                        break;
                    }

                    // Nếu không phải bản sao thì thêm thùng gang
                    if (!isCopy) {
                        const thungGang = {
                            MaThungThep: $nextRow.find('td').eq(0).text().trim(),
                            T_KLThungVaGang: parseFloat($nextRow.find('input[name="t_KLThungVaGang"]').val()) || null,
                            T_KLThungChua: parseFloat($nextRow.find('input[name="t_KLThungChua"]').val()) || null,
                            T_KLGangLong: parseFloat($nextRow.find('.KLGangLong').text()) || 0
                        };
                        parent.DanhSachThungGang.push(thungGang);
                    }

                    i++;
                }

                // Dòng đầu tiên cũng là thùng gang nếu không phải copy
                if (!isCopy) {
                    const thungGang = {
                        MaThungThep: $row.find('td').eq(0).text().trim(),
                        T_KLThungVaGang: parseFloat($row.find('input[name="t_KLThungVaGang"]').val()) || null,
                        T_KLThungChua: parseFloat($row.find('input[name="t_KLThungChua"]').val()) || null,
                        T_KLGangLong: parseFloat($row.find('.KLGangLong').text()) || 0
                    };
                    parent.DanhSachThungGang.unshift(thungGang); // thêm vào đầu
                }
                
                const phongBan = $('#IDPhongBan').val();
                if (phongBan === 'HRC1' && parent.DanhSachThungGang.length > 0) {
                    const firstItem = parent.DanhSachThungGang[0];
                    parent.KLThungVaGang_Thoi = parent.KLThungVaGang_Thoi ? parent.KLThungVaGang_Thoi : firstItem.T_KLThungVaGang;
                    parent.KLThung_Thoi = parent.KLThung_Thoi ? parent.KLThung_Thoi : firstItem.T_KLThungChua;
                }

                thungTrungGianMap[key] = parent;
            }

            const result = Object.values(thungTrungGianMap);
            return result;
        }
       
