@model Data_Product.Models.Tbl_KL_THUNGXE
<script src="~/Chonse/chosen.jquery.js"></script>
<link href="~/Chonse/chosen.css" rel="stylesheet">
@using (Html.BeginForm("Create", "KLxethung", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" style="padding-top:1.5%;">
        <div class="modal-content" style="max-width: none; width: 800px;margin-left:-110px">
            <div class="modal-header" style="background-color: #F9F9F9;">
                <h5 id="ModalTitle">Thêm mới KL xe thùng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-md-12" style="padding-bottom: 1.5%">
                    <label for="ID_LOCAO" class="form-label" style="margin-right:665px">Chọn Lò Cao</label>
                    @Html.DropDownListFor(model => model.ID_LOCAO, (SelectList)ViewBag.LoCaoList, "-- Chọn lò cao --", new { @class = "form-control chosen-select", @id = "ID_LOCAO" })
                    @Html.ValidationMessageFor(model => model.ID_LOCAO, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-12" style="padding-bottom: 1.5%;">
                    <label for="KL_THUNGXE" class="form-label" style="margin-right:633px">Thêm KL xe thùng</label>
                    @Html.EditorFor(model => model.KL_THUNGXE, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "KL_THUNGXE" } })
                    @Html.ValidationMessageFor(model => model.KL_THUNGXE, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="text-align: end;padding: 0% 3% 3% 3%;">
                    <input type="submit" style="border-radius: 10px;" value="Xác nhận" id="btnSubmit" class="btn btn-primary pull-right" />
                </div>
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        $(".chosen-select").chosen({
            width: "100%",
            no_results_text: "Không tìm thấy lò cao!"
        });
    });
</script>